@page "/customer/{id}"
@inject TheConfigurator2000.Data.ICustomerService CustomerService
@inject NavigationManager Navigation

<h3>Product</h3>

<EditForm Model="customer" OnSubmit="SubmitForm">
    <div class="form-group">
        <label>ID</label>
        <input id="id" name="id" class="form-control" value="@customer.Id" readonly />
    </div>
    <div class="form-group">
        <label>Name</label>
        <InputText id="name" class="form-control" name="name" @bind-Value="customer.Name"></InputText>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>

</EditForm>

@code {

    [Parameter]
    public string Id { get; set; }

    public Classes.Customer customer { get; set; }

    protected override void OnInitialized()
    {
        if (!String.IsNullOrEmpty(Id) & Id == "0")
        {
            customer = new Classes.Customer();
        }
        else
        {
            customer = CustomerService.GetCustomer(Guid.Parse(Id));
        }
    }
    void SubmitForm()
    {

        if (customer.Id == Guid.Empty)
        {
            CustomerService.AddCustomer(customer);
        }
        else
        {
            CustomerService.UpdateCustomer(customer);
        }
        Navigation.NavigateTo("customers");
    }

}
